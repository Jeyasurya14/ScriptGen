generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  email            String            @unique
  name             String?
  image            String?
  createdAt        DateTime          @default(now()) @map("created_at")
  scripts          Script[]
  transactions     Transaction[]
  credits          UserCredits?
  promoRedemptions PromoRedemption[]

  @@map("users")
}

model UserCredits {
  id              String   @id @default(uuid())
  userId          String   @unique @map("user_id")
  freeScriptsUsed Int      @default(0) @map("free_scripts_used")
  paidCredits     Int      @default(0) @map("paid_credits")
  totalGenerated  Int      @default(0) @map("total_generated")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @default(now()) @map("updated_at")
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_credits")
}

model Transaction {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  amount            Decimal  @db.Decimal(10, 2)
  creditsPurchased  Int      @default(1) @map("credits_purchased")
  razorpayOrderId   String?  @map("razorpay_order_id")
  razorpayPaymentId String?  @map("razorpay_payment_id")
  status            String   @default("pending")
  createdAt         DateTime @default(now()) @map("created_at")
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([razorpayOrderId])
  @@map("transactions")
}

model Script {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  title         String
  channelName   String?  @map("channel_name")
  duration      Int?
  contentType   String?  @map("content_type")
  scriptContent String?  @map("script_content")
  seoData       Json?    @map("seo_data")
  imagesData    Json?    @map("images_data")
  chaptersData  Json?    @map("chapters_data")
  brollData     Json?    @map("broll_data")
  shortsData    Json?    @map("shorts_data")
  createdAt     DateTime @default(now()) @map("created_at")
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt(sort: Desc)])
  @@map("scripts")
}

model PromoRedemption {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  code      String
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([userId, code], name: "userId_code")
  @@index([userId])
  @@map("promo_redemptions")
}
